<div class="container">
  <h2 class="title-lg mb">
    New users
  </h2>

  <div class="users__box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: {user: user} %>
    <% end %>
  </div>
</div>

<div class="container mt__sm">
  <h2 class="title__lg">
    <%= inclination(@questions.count, 'Last', 'Last') %>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'Question', 'Questions') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt__sm container">
    <p class="mb text-sm text-grey">
      Question <%= link_to "##{question.id}", question_path(question) %>
      for user <%= link_to "@#{question.user.nickname}", user_path(question.user) %>
    </p>
      <%= render question %>
  </div>
<% end %>

<div class="mt__sm container">
  <% if @questions.count == 0 %>
    <%= render 'users/user_login' %>
  <% end %>
</div>