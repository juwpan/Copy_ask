<% if question.errors.any? %>
  <div class="mt">
    <% question.errors.full_messages.each do |message| %>
      <p class="mb__sm text__red"><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: question, data: {turbo: false} do |form| %>
  <p><%= form.label :body, 'Question text' %></p>
  <p><%= form.text_area :body, rows: 5, class: 'form__text__area' %></p>
  <p class="mt"><%= form.label :user_id %></p>
  <p><%= form.text_field :user_id, class: 'form__text__field' %></p>
  <div class="back">
    <p class="mt"><%= form.submit "Save", class: 'button button__main' %></p>
    <p class="mt ml"> <%= 'or'  %></p>
    <%= link_to 'back', :back, class: 'back__link'  %>
  </div>
<% end %>
