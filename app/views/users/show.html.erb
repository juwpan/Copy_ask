<div class="user__box">
  <h2 class="title__lg mt__lg"><%= @user.name %></h2>

  <div class="mt">
    <%= render partial: 'users/user_avatar', locals: {user: @user} %>
  </div>
  
  <% if current_user == @user %>
    <p class="mt mb__lg">
      <%= link_to fa_icon('pencil'), edit_user_path(@user) %>
    </p>
  <% end %>

  <p class="text__bold mt mb__lg"><%= @user.nickname %></p>
</div>

<div class="container">
  <% if current_user.present? %>
    <%= link_to "Ask me", new_question_path(user_id: @user.nickname), class: "button button__yellow" %>
    <p class="mt"><%= render 'questions/form', question: @question %></p>
  <% end %>
</div>

<div class="container mt__sm">
  <h2 class="title__lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'question', 'questions') %>
  </h2>
</div>

<% unless current_user.present? %>
  <div class="mt__sm container">
      <%= render 'questions/form', question: @question %>
  </div>
<% end %>

<div class="mt__sm container">
  <% @questions.each do |question| %>
    <%= render question %>
  <% end %>
</div>
